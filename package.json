{
  "name": "easyMD",
  "productName": "easyMD",
  "version": "1.0.0",
  "description": "一个简洁易用的 Markdown 编辑器，支持实时预览和打印功能",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.easymd.app",
    "productName": "easyMD",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icon.png",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "title": "easyMD",
      "icon": "icon.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!.git/**/*"
    ]
  },
  "keywords": [
    "markdown",
    "editor",
    "preview",
    "print"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.4.0"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/commands": "^6.10.1",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language-data": "^6.5.2",
    "@codemirror/lint": "^6.9.2",
    "@codemirror/search": "^6.6.0",
    "@codemirror/state": "^6.5.4",
    "@codemirror/view": "^6.39.11",
    "codemirror": "^5.65.20",
    "highlight.js": "^11.9.0",
    "marked": "^11.1.1"
  }
}
